        <Border Background="White" BorderBrush="WhiteSmoke" BorderThickness="5" CornerRadius="8,8,0,8">
            <Grid Margin="0,10,0,0" Visibility="Hidden">
                <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,37,10,244"/>
                

            </Grid>
            
        </Border>
        <Grid Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Width="200" Height="200">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="200"  
                    UriSource="./assets/logo.png" />
                </Image.Source>
            </Image>
            <WrapPanel x:Name="wpp" Grid.Row="1" HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Rectangle Margin="3" Fill="CornflowerBlue" Width="294" Height="200" ></Rectangle>
                <Grid HorizontalAlignment="Stretch" Width="{Binding Path=ActualWidth, ElementName=wpp,Converter={StaticResource Converter}}"></Grid>
                
